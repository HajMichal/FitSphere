{
  "name": "fullstack-fitsphere",
  "private": true,
  "workspaces": [
    "client",
    "backend"
  ],
  "scripts": {
    "dev": "bun run dev:client & bun run dev:backend",
    "dev:client": "bun run --cwd client dev",
    "dev:backend": "bun run --cwd backend dev",
    "build": "bun run build:client && bun run build:backend",
    "build:client": "bun run --cwd client build",
    "build:backend": "bun run --cwd backend build"
  }
}